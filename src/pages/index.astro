---
import Layout from '~/layouts/PageLayout.astro';
import ContentSection from '~/components/widgets/ContentSection.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FeatureCarousel from '~/components/widgets/FeatureCarousel.astro';
import CVExperience from '~/components/cv/CVExperience.astro';
import CVEducation from '~/components/cv/CVEducation.astro';
import CVSkills from '~/components/cv/CVSkills.astro';
import CVRecognition from '~/components/cv/CVRecognition.astro';

import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { spaHeaderNav } from '~/utils/navigation';

const header = spaHeaderNav();
const metadata = {
  title: 'Nik Chanda - Trusted Technology Leader',
};

export const prerender = true;
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header links={header.links} actions={header.actions} isSticky />
  </Fragment>

  <ContentSection id="about">
    <Hero
      id="about-hero"
      title="Nik Chanda"
      tagline="Agile Software Innovator & Servant Leader"
      actions={[
        { variant: 'primary', text: 'Contact', onclick: `javascript:getElementById('contact-modal').showModal()` },
      ]}
      as="subsection"
    >
      <Fragment slot="subtitle">
        Technology Executive with the balanced blend of leadership excellence, technical expertise, and strategic
        thinking needed to build high-impact, results-oriented organizations. With a 15+ year rich tapestry of software
        prowess, and a decade perfecting the art of nurturing technology talent, Nik Chanda delivers innovative
        leadership in the high-stakes world of SaaS and beyond.
      </Fragment>
    </Hero>
    <!-- 
    <FeatureCarousel
      title="Professional Highlights"
      id="about-highlights"
      items={[
        {
          title: 'Description:',
          description:
            'Developed a comprehensive brand identity for a tech startup, Tech Innovators, specializing in disruptive innovations. The goal was to convey a modern yet approachable image that resonated with both corporate clients and tech enthusiasts.',
        },
        {
          title: 'Role:',
          description:
            'Led the entire branding process from concept to execution. Created a dynamic logo that symbolized innovation, selected a vibrant color palette, and I designed corporate stationery, website graphics, and social media assets.',
        },
      ]}
      as="div"
    />
      -->
  </ContentSection>

  <ContentSection id="experience" title="Professional Experience">
    <CVExperience as="div" />
  </ContentSection>

  <ContentSection id="education" title="Education & Professional Development">
    <CVEducation as="div" />
  </ContentSection>

  <ContentSection id="skills" title="Skills, Tools & Technologies">
    <CVSkills cv="cto" as="div" />
  </ContentSection>

  <ContentSection id="recognition" title="Patents & Recognition">
    <CVRecognition as="div" />
  </ContentSection>

  <ContentSection id="discussion" title="Discussion">
    <!-- 
    <BlogLatestPosts
      id="blog"
      title={`<span class='text-muted text-xl mt-0 mb-4 font-normal'>Recent Articles</span>`}
    />
    -->
    <CallToAction
      title="Let's build together"
      subtitle="Ready to see how to move your team forward?"
      actions={[
        {
          variant: 'primary',
          text: 'Contact',
          onclick: `javascript:getElementById('contact-modal').showModal()`,
        },
      ]}
    />
  </ContentSection>
</Layout>
